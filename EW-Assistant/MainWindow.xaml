<Window x:Class="EW_Assistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="EW-Assistant"
        Height="720"
        Width="1280"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Maximized"
        Background="#FFF5F5F7">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome ResizeBorderThickness="0,6,6,6" />
    </shell:WindowChrome.WindowChrome>

    <!-- ===== 左侧栏配色与样式（仿图风格） ===== -->
    <Window.Resources>
        <!-- 左侧背景的轻微渐变 -->
        <LinearGradientBrush x:Key="SideBgBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FAFBFF" Offset="0"/>
            <GradientStop Color="#F6F8FC" Offset="1"/>
        </LinearGradientBrush>

        <!-- 导航按钮（胶囊 + 圆形图标） -->
        <Style x:Key="SidebarNavStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent">
                            <Grid Margin="12,6,12,0" x:Name="Root">
                                <Grid>
                                    <Border x:Name="Glow" CornerRadius="16" Margin="-6" Opacity="0">
                                        <Border.Background>
                                            <RadialGradientBrush GradientOrigin="0.3,0.3" RadiusX="0.8" RadiusY="0.8">
                                                <GradientStop Color="#403B82F6" Offset="0"/>
                                                <GradientStop Color="#103B82F6" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <BlurEffect Radius="18"/>
                                        </Border.Effect>
                                    </Border>

                                    <Border x:Name="Pill" CornerRadius="12" RenderTransformOrigin="0.5,0.5">
                                        <Border.Background>
                                            <SolidColorBrush x:Name="PillBrush" Color="#00FFFFFF"/>
                                        </Border.Background>
                                        <Border.RenderTransform>
                                            <ScaleTransform x:Name="PillScale" ScaleX="1" ScaleY="1"/>
                                        </Border.RenderTransform>
                                    </Border>

                                    <StackPanel Orientation="Horizontal" Margin="12,8,12,8">
                                        <Grid Width="32" Height="32">
                                            <Ellipse x:Name="IconCircle" StrokeThickness="1.5" RenderTransformOrigin="0.5,0.5">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush x:Name="IconFill" Color="#00FFFFFF"/>
                                                </Ellipse.Fill>
                                                <Ellipse.Stroke>
                                                    <SolidColorBrush x:Name="IconStroke" Color="#CBD5E1"/>
                                                </Ellipse.Stroke>
                                                <Ellipse.RenderTransform>
                                                    <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1"/>
                                                </Ellipse.RenderTransform>
                                            </Ellipse>
                                            <TextBlock x:Name="Glyph"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       Text="{TemplateBinding Tag}"
                                                       FontSize="13"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Foreground>
                                                    <SolidColorBrush x:Name="GlyphBrush" Color="#64748B"/>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                        </Grid>
                                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="12,0,0,0">
                                            <TextBlock x:Name="Label"
                                                       Text="{TemplateBinding Content}"
                                                       VerticalAlignment="Center"
                                                       FontSize="15">
                                                <TextBlock.Foreground>
                                                    <SolidColorBrush x:Name="LabelBrush" Color="#111827"/>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <TextBlock x:Name="Sub"
                                                       Text="丝滑切换"
                                                       FontSize="11"
                                                       Foreground="#94A3B8"
                                                       Visibility="Collapsed"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="MouseOver">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="PillScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1.02"
                                                                 Duration="0:0:0.18"/>
                                                <DoubleAnimation Storyboard.TargetName="PillScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1.02"
                                                                 Duration="0:0:0.18"/>
                                                <ColorAnimation Storyboard.TargetName="PillBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#DFE7FF"
                                                                Duration="0:0:0.20"/>
                                                <ColorAnimation Storyboard.TargetName="IconFill"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#E8EEFF"
                                                                Duration="0:0:0.20"/>
                                                <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#698AEC"
                                                                Duration="0:0:0.20"/>
                                                <ColorAnimation Storyboard.TargetName="GlyphBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#3250B0"
                                                                Duration="0:0:0.20"/>
                                                <ColorAnimation Storyboard.TargetName="LabelBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#0B1220"
                                                                Duration="0:0:0.20"/>
                                                <DoubleAnimation Storyboard.TargetName="Glow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.35"
                                                                 Duration="0:0:0.20"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="PillScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="0.98"
                                                                 Duration="0:0:0.12"/>
                                                <DoubleAnimation Storyboard.TargetName="PillScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="0.98"
                                                                 Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="Root"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.6"
                                                                 Duration="0:0:0.10"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>

                                    <VisualStateGroup x:Name="CheckStates">
                                        <VisualStateGroup.Transitions>
                                            <VisualTransition GeneratedDuration="0:0:0.22"/>
                                        </VisualStateGroup.Transitions>
                                        <VisualState x:Name="Unchecked">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="PillBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#00FFFFFF"
                                                                Duration="0:0:0.22"/>
                                                <ColorAnimation Storyboard.TargetName="IconFill"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#00FFFFFF"
                                                                Duration="0:0:0.22"/>
                                                <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#CBD5E1"
                                                                Duration="0:0:0.22"/>
                                                <ColorAnimation Storyboard.TargetName="GlyphBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#64748B"
                                                                Duration="0:0:0.22"/>
                                                <ColorAnimation Storyboard.TargetName="LabelBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#111827"
                                                                Duration="0:0:0.22"/>
                                                <DoubleAnimation Storyboard.TargetName="Glow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0"
                                                                 Duration="0:0:0.22"/>
                                                <DoubleAnimation Storyboard.TargetName="PillScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1"
                                                                 Duration="0:0:0.22"/>
                                                <DoubleAnimation Storyboard.TargetName="PillScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1"
                                                                 Duration="0:0:0.22"/>
                                                <DoubleAnimation Storyboard.TargetName="IconScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1"
                                                                 Duration="0:0:0.22"/>
                                                <DoubleAnimation Storyboard.TargetName="IconScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1"
                                                                 Duration="0:0:0.22"/>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Checked">
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="PillBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#F0F5FF"
                                                                Duration="0:0:0.24"/>
                                                <ColorAnimation Storyboard.TargetName="IconFill"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#3B82F6"
                                                                Duration="0:0:0.24"/>
                                                <ColorAnimation Storyboard.TargetName="IconStroke"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#3B82F6"
                                                                Duration="0:0:0.24"/>
                                                <ColorAnimation Storyboard.TargetName="GlyphBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#FFFFFF"
                                                                Duration="0:0:0.24"/>
                                                <ColorAnimation Storyboard.TargetName="LabelBrush"
                                                                Storyboard.TargetProperty="Color"
                                                                To="#0B1220"
                                                                Duration="0:0:0.24"/>
                                                <DoubleAnimation Storyboard.TargetName="Glow"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.85"
                                                                 Duration="0:0:0.24"/>
                                                <DoubleAnimation Storyboard.TargetName="PillScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1.05"
                                                                 Duration="0:0:0.24"/>
                                                <DoubleAnimation Storyboard.TargetName="PillScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1.05"
                                                                 Duration="0:0:0.24"/>
                                                <DoubleAnimation Storyboard.TargetName="IconScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1.08"
                                                                 Duration="0:0:0.24"/>
                                                <DoubleAnimation Storyboard.TargetName="IconScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1.08"
                                                                 Duration="0:0:0.24"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </Border>
                <ControlTemplate.Triggers>
                    <!-- 悬停兜底：即便状态机失效也能变色 -->
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsMouseOver" Value="True"/>
                            <Condition Property="IsChecked" Value="False"/>
                        </MultiTrigger.Conditions>
                        <Setter TargetName="Pill" Property="Background" Value="#DFE7FF"/>
                        <Setter TargetName="IconCircle" Property="Fill" Value="#E8EEFF"/>
                        <Setter TargetName="IconCircle" Property="Stroke" Value="#698AEC"/>
                        <Setter TargetName="Glyph" Property="Foreground" Value="#3250B0"/>
                        <Setter TargetName="Label" Property="Foreground" Value="#0B1220"/>
                    </MultiTrigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>

        <!-- 圆角小按钮（中性灰） -->
        <Style x:Key="RoundSmallButton" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="64"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 右上角标题栏按钮（扩大点击范围） -->
        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="11"/>

            <Setter Property="Cursor" Value="Arrow"/>

            <!-- 保留这个，让按钮在 Chrome 区域也能吃到鼠标 -->
            <Setter Property="shell:WindowChrome.IsHitTestVisibleInChrome"
            Value="True"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#55FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- 关闭按钮专用（红色悬停） -->
        <Style x:Key="CloseCaptionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource CaptionButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#FFE11A1A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#FFC30F0F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 自定义标题栏：可拖动 -->
        <Border Grid.Row="0"
                Background="#493A8B"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <!-- 左边留 8px，右边不留缝 -->
            <Grid Margin="8,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧 logo + 程序名 -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Image Source="/Assets/EW.ico"
                           Width="40"
                           Height="40"
                           Stretch="Uniform"
                           Margin="0,0,6,0"
                           ToolTip="EW"/>
                    <TextBlock Text="EW-Assistant"
                               Foreground="White"
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 中间标题（可截断） -->
                <TextBlock Grid.Column="1"
                           Text="T66-TCT Program Powered By EW AI"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>

                <!-- 右上角窗口按钮 -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Stretch">
                    <!-- 最小化 -->
                    <Button Style="{StaticResource CaptionButtonStyle}"
                            Click="MinimizeButton_Click"
                            ToolTip="最小化">
                        <TextBlock Text="&#xE921;"/>
                    </Button>
                    <!-- 最大化/还原 -->
                    <Button Style="{StaticResource CaptionButtonStyle}"
                            Click="MaximizeButton_Click"
                            ToolTip="最大化/还原">
                        <TextBlock Text="&#xE922;"/>
                    </Button>
                    <!-- 关闭 -->
                    <Button Style="{StaticResource CloseCaptionButtonStyle}"
                            Click="CloseButton_Click"
                            ToolTip="关闭">
                        <TextBlock Text="&#xE8BB;"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主体：左侧栏 + 右侧内容(2/3) + 右侧信息卡(1/3) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <!-- 左侧栏 -->
                <ColumnDefinition Width="3*"/>
                <!-- 主内容：2/3 -->
                <ColumnDefinition Width="*"/>
                <!-- 信息卡：1/3 -->
            </Grid.ColumnDefinitions>

            <!-- 左侧栏 -->
            <Border Grid.Column="0"
                    Background="{StaticResource SideBgBrush}"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,8,0,12">
                        <Border Margin="12,8,12,12"
                                Padding="20,14"
                                CornerRadius="18"
                                Background="#F5F7FF">
                            <Border.Effect>
                                <DropShadowEffect Color="#1A000000" BlurRadius="16" ShadowDepth="2" Opacity="0.30"/>
                            </Border.Effect>
                            <StackPanel x:Name="NavTitlePanel" Orientation="Vertical" Margin="2,0,0,0" Opacity="1">
                                <StackPanel.RenderTransform>
                                    <TranslateTransform x:Name="NavTitleTransform" Y="0"/>
                                </StackPanel.RenderTransform>
                                <TextBlock Text="当前模块"
                                           FontSize="11"
                                           FontWeight="Normal"
                                           Foreground="#9CA3AF"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding CurrentPageTitle, RelativeSource={RelativeSource AncestorType=Window}}"
                                           FontSize="28"
                                           FontWeight="SemiBold"
                                           Foreground="#111827"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </Border>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}" IsChecked="True"
                                     Content="总览" Checked="NavItem_Checked" Tag="&#xE770;"/>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}"
                                     Content="AI助手" Checked="NavItem_Checked" Tag="&#xE7FD;"/>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}"
                                     Content="AI文档" Checked="NavItem_Checked" Tag="&#xE8EF;"/>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}"
                                     Content="产能看板" Checked="NavItem_Checked" Tag="&#xE9D2;"/>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}"
                                     Content="报警看板" Checked="NavItem_Checked" Tag="&#xE81F;"/>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}"
                                     Content="预警中心" Checked="NavItem_Checked" Tag="&#xE7BA;"/>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}"
                                     Content="机台控制" Checked="NavItem_Checked" Tag="&#xE707;"/>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}"
                                     Content="库存管理" Checked="NavItem_Checked" Tag="&#xE142;"/>
                        <RadioButton GroupName="Nav" Style="{StaticResource SidebarNavStyle}"
                                     Content="设置" Checked="NavItem_Checked" Tag="&#xE713;"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 右侧主内容容器 -->
            <Grid x:Name="RightHost" Grid.Column="1" Background="WhiteSmoke"/>

            <!-- 右侧信息卡片（程序信息） -->
            <Border Grid.Column="2" Margin="8" Padding="12" CornerRadius="16" Background="White">
                <Border.Effect>
                    <DropShadowEffect Color="#1A000000" BlurRadius="18" ShadowDepth="2" Opacity="0.35"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 标题 + 操作 -->
                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="2,0,2,8">
                        <TextBlock Text="AI运行信息" FontSize="16" FontWeight="SemiBold" Foreground="#0B1220"
                                   VerticalAlignment="Center" DockPanel.Dock="Left"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button Content="清空"
                                    Click="BtnClearInfo_Click"
                                    Margin="8,0,0,0"
                                    Style="{StaticResource RoundSmallButton}"/>
                        </StackPanel>
                    </DockPanel>

                    <!-- 消息列表 -->
                    <ListBox x:Name="InfoList"
                             Grid.Row="1"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="14"
                             ItemsSource="{Binding InfoItems}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.CanContentScroll="False">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Time, StringFormat=HH:mm:ss}"
                                               FontSize="12" Foreground="#94A3B8" Margin="2,0,2,4"/>

                                    <Border Grid.Row="1" x:Name="Bubble"
                                            Background="#F1F5F9"
                                            Padding="8"
                                            CornerRadius="8"
                                            HorizontalAlignment="Stretch">
                                        <TextBlock Text="{Binding Text}"
                                                   TextWrapping="WrapWithOverflow"
                                                   TextTrimming="None"
                                                   Foreground="#0B1220"/>
                                    </Border>
                                </Grid>

                                <!-- 颜色状态 -->
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Level}" Value="ok">
                                        <Setter TargetName="Bubble" Property="Background" Value="#ECFDF5"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Level}" Value="warn">
                                        <Setter TargetName="Bubble" Property="Background" Value="#FEF3C7"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Level}" Value="error">
                                        <Setter TargetName="Bubble" Property="Background" Value="#FEE2E2"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
