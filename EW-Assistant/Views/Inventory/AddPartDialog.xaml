<Window x:Class="EW_Assistant.Views.Inventory.AddPartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Microsoft YaHei"
        FontSize="13"
        MinWidth="420">
    <Border Background="White" BorderBrush="#D5D7DC" BorderThickness="2" CornerRadius="12" Padding="18">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="新增备件"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#0B1220"
                       Margin="0,0,0,12"/>

            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="名称" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" Padding="10,6" MinWidth="260"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="规格/型号" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                <TextBox x:Name="SpecBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Padding="10,6"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="库位" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                <TextBox x:Name="LocationBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" Padding="10,6"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="计量单位" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                <ComboBox x:Name="UnitBox"
                          Grid.Row="3"
                          Grid.Column="1"
                          Margin="0,0,0,10"
                          Padding="6,2"
                          IsEditable="True"
                          Text="PCS">
                    <ComboBoxItem Content="PCS"/>
                    <ComboBoxItem Content="套"/>
                    <ComboBoxItem Content="箱"/>
                    <ComboBoxItem Content="卷"/>
                    <ComboBoxItem Content="袋"/>
                    <ComboBoxItem Content="米"/>
                    <ComboBoxItem Content="M"/>
                    <ComboBoxItem Content="公斤"/>
                    <ComboBoxItem Content="KG"/>
                </ComboBox>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="当前库存" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                <TextBox x:Name="CurrentStockBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" Padding="10,6"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="安全库存" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="SafeStockBox" Grid.Row="5" Grid.Column="1" Padding="10,6"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="取消"
                        Width="90"
                        Height="32"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"
                        Background="#F3F4F6"
                        BorderBrush="#D1D5DB"/>
                <Button Content="确定"
                        Width="100"
                        Height="32"
                        Click="Ok_Click"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderBrush="#3B82F6"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
