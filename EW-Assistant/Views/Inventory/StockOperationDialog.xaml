<Window x:Class="EW_Assistant.Views.Inventory.StockOperationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Microsoft YaHei"
        FontSize="13"
        MinWidth="420">
    <Border Background="White" BorderBrush="#D5D7DC" BorderThickness="2" CornerRadius="12" Padding="18">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock x:Name="TitleText"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#0B1220"
                           Margin="0,0,0,6"/>
                <TextBlock x:Name="SubtitleText"
                           Foreground="#6B7280"
                           Margin="0,0,0,12"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="QtyLabel" Grid.Row="0" Grid.Column="0" Text="数量" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <TextBox x:Name="QtyBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" Padding="10,6"/>

                <TextBlock x:Name="NewQtyLabel" Grid.Row="1" Grid.Column="0" Text="调整后库存" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,8" Visibility="Collapsed"/>
                <TextBox x:Name="NewQtyBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" Padding="10,6" Visibility="Collapsed"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="原因" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="ReasonBox"
                          Grid.Row="2"
                          Grid.Column="1"
                          IsEditable="True"
                          Padding="6,2"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="取消"
                        Width="90"
                        Height="32"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"
                        Background="#F3F4F6"
                        BorderBrush="#D1D5DB"/>
                <Button Content="确定"
                        Width="100"
                        Height="32"
                        Click="Ok_Click"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderBrush="#3B82F6"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
