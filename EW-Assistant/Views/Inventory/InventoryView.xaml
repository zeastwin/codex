<UserControl x:Class="EW_Assistant.Views.Inventory.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="640"
             d:DesignWidth="1100"
             Background="#F3F4F6"
             FontFamily="Microsoft YaHei"
             FontSize="13">
    <UserControl.Resources>
        <!-- 卡片样式：白底、浅灰边框、圆角、轻微阴影 -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1A000000" BlurRadius="10" ShadowDepth="2" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 主色按钮：圆角胶囊，悬停/按下有轻微变化 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="88"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1D4ED8"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 次级按钮：浅灰背景，圆角胶囊 -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="88"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid 表头与行样式 -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F0FE"/>
                    <Setter Property="Foreground" Value="#111827"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 通用居中单元格样式 -->
        <Style x:Key="CenterCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CenterTextStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部栏 -->
        <Border Grid.Row="0"
                Background="#F3F4F6"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,0,1"
                CornerRadius="8,8,0,0"
                Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="库存管理"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#111827"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="新增"
                            Command="{Binding AddPartCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,8,0"/>
                    <Button Content="刷新"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主体内容 -->
        <Grid Grid.Row="1" Margin="0,8,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3.2*"/>
                <ColumnDefinition Width="1.8*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 列表卡片 -->
                <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="备件列表"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#0B1220"
                                   Margin="4,0,0,6"/>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Parts}"
                                  SelectedItem="{Binding SelectedPart, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  AlternationCount="2"
                                  AlternatingRowBackground="#F9FAFB"
                                  CanUserSortColumns="True"
                                  CanUserResizeColumns="True"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  BorderThickness="1"
                                  GridLinesVisibility="Vertical"
                                  Background="White"
                                  FontSize="14"
                                  RowHeight="30"
                                  VerticalScrollBarVisibility="Auto"
                                  FocusVisualStyle="{x:Null}">
                            <DataGrid.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#DCE7FF"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#0F172A"/>

                                <!-- 轻量卡片风格表头 -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="#E9EEF7"/>
                                    <Setter Property="Foreground" Value="#0B1220"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="BorderBrush" Value="#D7DEEA"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                </Style>

                                <!-- 行样式：浅蓝交替、鼠标悬停/选中柔和色 -->
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                    <Style.Triggers>
                                        <Trigger Property="AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="#F7FAFF"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F2F7FF"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E1EDFF"/>
                                            <Setter Property="Foreground" Value="#0F172A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- 单元格样式：居中显示，内边距较紧凑 -->
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="单位" Binding="{Binding Unit}" Width="80" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="库位" Binding="{Binding Location}" Width="120" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="规格" Binding="{Binding Spec}" Width="*" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="库存" Binding="{Binding CurrentStock}" Width="90" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="安全库存" Binding="{Binding SafeStock}" Width="110" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- 历史记录卡片 -->
                <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Margin="0,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="历史进出库记录"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#0B1220"
                                   Margin="0,0,0,6"/>
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Transactions}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  AlternationCount="2"
                                  AlternatingRowBackground="#F9FAFB"
                                  CanUserSortColumns="True"
                                  CanUserResizeColumns="True"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  BorderThickness="1"
                                  GridLinesVisibility="Vertical"
                                  Background="White"
                                  FontSize="13"
                                  RowHeight="28"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalGridLinesBrush="#E5E7EB"
                                  VerticalGridLinesBrush="#E5E7EB"
                                  FocusVisualStyle="{x:Null}">
                            <DataGrid.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#DCE7FF"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#0F172A"/>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="#E9EEF7"/>
                                    <Setter Property="Foreground" Value="#0B1220"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Height" Value="28"/>
                                    <Setter Property="BorderBrush" Value="#D7DEEA"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="Padding" Value="6,3"/>
                                </Style>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                    <Style.Triggers>
                                        <Trigger Property="AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EEF2FF"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#DCE7FF"/>
                                            <Setter Property="Foreground" Value="#0F172A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="6,3"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="备件" Binding="{Binding PartName}" Width="120" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="90" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="变更" Binding="{Binding QtyChange}" Width="70" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="变更后" Binding="{Binding AfterQty}" Width="80" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="原因" Binding="{Binding Reason}" Width="*" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                                <DataGridTextColumn Header="时间" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" Width="160" CellStyle="{StaticResource CenterCellStyle}" ElementStyle="{StaticResource CenterTextStyle}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <!-- 详情卡片 -->
            <Border Grid.Column="1"
                    Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.Resources>
                        <Style x:Key="FieldTextBoxStyle" TargetType="TextBox">
                            <Setter Property="Background" Value="#F4F6F9"/>
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="6,4"/>
                        </Style>
                    </Grid.Resources>

                    <!-- 顶部关键信息 -->
                    <StackPanel>
                        <TextBlock Text="备件信息"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#0B1220"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding SelectedPart.Name}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#111827"
                                   Margin="0,0,0,8"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,10,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="库位" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding SelectedPart.Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FieldTextBoxStyle}"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="计量单位" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                        <ComboBox Grid.Row="1" Grid.Column="1"
                                  Text="{Binding SelectedPart.Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsEditable="True"
                                  Padding="6,2"
                                  Margin="0,0,0,10"
                                  IsEnabled="False">
                            <ComboBoxItem Content="PCS"/>
                            <ComboBoxItem Content="套"/>
                            <ComboBoxItem Content="箱"/>
                            <ComboBoxItem Content="卷"/>
                            <ComboBoxItem Content="袋"/>
                            <ComboBoxItem Content="米"/>
                            <ComboBoxItem Content="M"/>
                            <ComboBoxItem Content="公斤"/>
                            <ComboBoxItem Content="KG"/>
                        </ComboBox>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="规格" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding SelectedPart.Spec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FieldTextBoxStyle}"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="当前库存" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,10"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding SelectedPart.CurrentStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FieldTextBoxStyle}"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="安全库存" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding SelectedPart.SafeStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FieldTextBoxStyle}"
                                 IsReadOnly="True"/>
                    </Grid>

                    <!-- 操作按钮 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="编辑"
                                Command="{Binding EditPartCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,8,0"/>
                        <Button Content="删除"
                                Command="{Binding DeletePartCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 底部操作条 -->
        <Border Grid.Row="2"
                Style="{StaticResource CardBorderStyle}"
                Margin="0,8,0,0"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,4,0,0">
                    <Button Content="入库"
                            Command="{Binding StockInCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="出库"
                            Command="{Binding StockOutCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="调整库存"
                            Command="{Binding AdjustStockCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
