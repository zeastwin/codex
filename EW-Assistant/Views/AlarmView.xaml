<UserControl x:Class="EW_Assistant.Views.AlarmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="White">

    <UserControl.Resources>
        <!-- 统一卡片样式 -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.18" Color="#33000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#0B1220"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="KpiNumber" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>

        <Style x:Key="KpiLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#6B7280"/>
        </Style>

        <Style TargetType="Button" x:Key="SolidBtn">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#4F87FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4F87FF"/>
        </Style>

        <Style TargetType="Button" x:Key="GhostBtn">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
        </Style>

        <Style TargetType="ComboBox" x:Key="CompactCbo">
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
        </Style>

        <!-- 配色 -->
        <SolidColorBrush x:Key="FgStrong" Color="#0F172A"/>
        <SolidColorBrush x:Key="FgBody"   Color="#111827"/>
        <SolidColorBrush x:Key="FgMuted"  Color="#6B7280"/>
        <SolidColorBrush x:Key="FgSubtle" Color="#94A3B8"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#4F87FF"/>
    </UserControl.Resources>

    <ScrollViewer x:Name="RootScroll"
                  VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              PanningMode="VerticalOnly"
              CanContentScroll="False"
              Background="White">
        <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0 工具栏 -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <!-- 2 KPI -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <!-- 4 主图 2x2 -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <!-- 6 底部一张卡：仅“最长连续” -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="报警看板" FontSize="20" FontWeight="SemiBold" Foreground="#0B1220"/>
                <TextBlock x:Name="TxtSubTitle" Text="  · " Margin="6,0,0,0" Foreground="#6B7280" FontSize="12"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="BtnPrev" Style="{StaticResource GhostBtn}" Content="◀ 前一天" Click="BtnPrev_Click"/>
                <Button x:Name="BtnToday" Style="{StaticResource GhostBtn}" Content="今天" Click="BtnToday_Click"/>
                <Button x:Name="BtnNext" Style="{StaticResource GhostBtn}" Content="后一天 ▶" Click="BtnNext_Click"/>
                <ComboBox x:Name="CboRecent" Style="{StaticResource CompactCbo}" SelectionChanged="CboRecent_SelectionChanged"/>
                <Button x:Name="BtnRefresh" Style="{StaticResource SolidBtn}" Content="刷新" Click="BtnRefresh_Click"/>
            </StackPanel>
        </Grid>

        <!-- KPI -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource Card}" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="当日报警条数" Style="{StaticResource CardTitle}"/>
                    <TextBlock x:Name="KpiCount" Style="{StaticResource KpiNumber}" Text="—"/>
                    <TextBlock Style="{StaticResource KpiLabel}" Text="单位：条"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="当日报警总时长" Style="{StaticResource CardTitle}"/>
                    <TextBlock x:Name="KpiSeconds" Style="{StaticResource KpiNumber}" Text="—"/>
                    <TextBlock Style="{StaticResource KpiLabel}" Text="单位：秒 / 分钟自动换算"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Grid.Column="4">
                <StackPanel>
                    <TextBlock Text="平均单次时长" Style="{StaticResource CardTitle}"/>
                    <TextBlock x:Name="KpiAvg" Style="{StaticResource KpiNumber}" Text="—"/>
                    <TextBlock Style="{StaticResource KpiLabel}" Text="单位：秒"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 主图 2×2 -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="12"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- 最近7天 -->
            <Border Style="{StaticResource Card}" Grid.Row="0" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="TitleWeek" Text="最近 7 天报警次数" Style="{StaticResource CardTitle}"/>
                    <skia:SKElement x:Name="SkAlarmWeek" Grid.Row="1" Height="240" PaintSurface="SkAlarmWeek_PaintSurface"/>
                </Grid>
            </Border>

            <!-- 饼图 -->
            <Border Style="{StaticResource Card}" Grid.Row="0" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="TitlePie" Text="报警时长占比" Style="{StaticResource CardTitle}"/>
                    <skia:SKElement x:Name="SkPie" Grid.Row="1" Height="240" PaintSurface="SkPie_PaintSurface"/>
                </Grid>
            </Border>

            <!-- 24小时 -->
            <Border Style="{StaticResource Card}" Grid.Row="2" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="TitleHour" Text="24 小时报警次数" Style="{StaticResource CardTitle}"/>
                    <skia:SKElement x:Name="SkHour" Grid.Row="1" Height="240" PaintSurface="SkHour_PaintSurface"/>
                </Grid>
            </Border>

            <!-- TOP 类别 -->
            <Border Style="{StaticResource Card}" Grid.Row="2" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="TitleTop" Text="报警类别 TOP" Style="{StaticResource CardTitle}"/>
                    <skia:SKElement x:Name="SkTop" Grid.Row="1" Height="240" PaintSurface="SkTop_PaintSurface"/>
                </Grid>
            </Border>
        </Grid>

        <!-- 底部：仅“最长连续报警窗口”（更矮、独占整行） -->
        <Grid Grid.Row="6" MaxHeight="170" VerticalAlignment="Top">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            

            <Border Style="{StaticResource Card}" MinHeight="150">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        
                    </Grid.RowDefinitions>

                    <TextBlock Text="最长连续报警窗口（当天）" Style="{StaticResource CardTitle}"/>

                    <Grid Grid.Row="1" Margin="0,4,0,0" Grid.IsSharedSizeScope="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="meta"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="时间段：" Style="{StaticResource KpiLabel}" Margin="0,2,0,0"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LwRange"
                                   FontSize="18" FontWeight="Bold" Foreground="#111827"
                                   Margin="6,0,0,0"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="持续时长：" Style="{StaticResource KpiLabel}" Margin="0,2,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LwHours"
                                   FontSize="18" FontWeight="Bold" Foreground="#111827"
                                   Margin="6,0,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="合计报警时长：" Style="{StaticResource KpiLabel}" Margin="0,2,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LwSeconds"
                                   FontSize="18" FontWeight="Bold" Foreground="#111827"
                                   Margin="6,0,0,0"/>

                        <!-- 24格时间轴 -->
                        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <!-- 24 等分列 -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.ColumnSpan="24" CornerRadius="9" Background="#EEF2F7" BorderBrush="#E5E7EB" BorderThickness="1"/>
                            <Border x:Name="LwBar"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Visibility="Collapsed"
                                    CornerRadius="9"
                                    Background="#4F87FF"
                                    Opacity="0.35"/>
                        </Grid>

                        <!-- 刻度 -->
                        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,2,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="00" FontSize="11" Foreground="#6B7280"/>
                            <TextBlock Grid.Column="1" Text="06" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="12" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="18" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="24" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            
        </Grid>

        <!-- 底部：明细（按选择） -->
            <Border Grid.Row="8"
                Style="{StaticResource Card}"
                MinHeight="220"
                PreviewMouseWheel="DetailCard_PreviewMouseWheel">
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- 标题：会在代码里写入“明细 · 类别名（yyyy-MM-dd）” -->
                <TextBlock x:Name="DetailTitle"
                   Text="明细 · 未选择"
                   Style="{StaticResource CardTitle}"/>

                <!-- 表格：显示时间/代码/类别/时长/信息 -->
                <DataGrid x:Name="DetailGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  RowHeight="28"
                  BorderThickness="0"
                  EnableRowVirtualization="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="时间"  Binding="{Binding Time}"     SortMemberPath="TimeSecOfDay" Width="86"/>
                            <DataGridTextColumn Header="代码"  Binding="{Binding Code}"                                   Width="90"/>
                            <DataGridTextColumn Header="类别"  Binding="{Binding Category}"                               Width="150"/>
                            <DataGridTextColumn Header="时长"  Binding="{Binding Duration}" SortMemberPath="DurationSec"  Width="80"/>
                            <!-- 关键：最后一列占余宽 -->
                            <DataGridTextColumn Header="内容"  Binding="{Binding Message}"                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                <!-- 空态提示 -->
                <TextBlock x:Name="DetailEmpty"
                   Grid.Row="1"
                   Text="在上面的『报警类别 TOP』中点击一个类别条，查看该类别的原始记录"
                   Foreground="#6B7280"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="Visible"/>
            </Grid>
        </Border>


    </Grid>
    </ScrollViewer>
</UserControl>
