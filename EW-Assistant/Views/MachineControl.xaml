<UserControl x:Class="EW_Assistant.Views.MachineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="220" d:DesignWidth="820"
             Background="Transparent">
    <UserControl.Resources>
        <!-- 圆角实体按钮 -->
        <Style x:Key="SolidBtn" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="14,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.80"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- 卡片 -->
    <Border Margin="16" Padding="16" Background="White" CornerRadius="16">
        <Border.Effect>
            <DropShadowEffect Color="#1A000000" BlurRadius="18" ShadowDepth="2" Opacity="0.35"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="14"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <DockPanel Grid.Row="0" LastChildFill="False">
                <TextBlock Text="机台控制" FontSize="18" FontWeight="SemiBold" Foreground="#0B1220"
                           VerticalAlignment="Center" DockPanel.Dock="Left"/>
            </DockPanel>

            <!-- 按钮区 -->
            <WrapPanel Grid.Row="2" ItemHeight="42" ItemWidth="140">

                 <!--启动--> 
                <Button Style="{StaticResource SolidBtn}"
                        Background="#10B981" BorderBrush="#10B981"
                        Command="{Binding StartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Click="Start_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE768;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="启动"/>
                    </StackPanel>
                </Button>

                 <!--暂停--> 
                <Button Style="{StaticResource SolidBtn}"
                        Background="#F59E0B" BorderBrush="#F59E0B"
                        Command="{Binding PauseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Click="Pause_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE769;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="暂停"/>
                    </StackPanel>
                </Button>

                 <!--复位--> 
                <Button Style="{StaticResource SolidBtn}"
                        Background="#3B82F6" BorderBrush="#3B82F6"
                        Command="{Binding ResetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Click="Reset_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="复位"/>
                    </StackPanel>
                </Button>

                 <!--清除报警--> 
                <Button Style="{StaticResource SolidBtn}"
                        Background="#EF4444" BorderBrush="#EF4444"
                        Command="{Binding ClearAlarmCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Click="ClearAlarm_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="清除报警"/>
                    </StackPanel>
                </Button>

                 <!--一键标定--> 
                <Button Style="{StaticResource SolidBtn}"
                        Background="#8B5CF6" BorderBrush="#8B5CF6"
                        Command="{Binding CalibrateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Click="Calibrate_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE90F;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="一键标定"/>
                    </StackPanel>
                </Button>

                <!--一键点检-->
                <Button Style="{StaticResource SolidBtn}"
        Background="#06B6D4" BorderBrush="#06B6D4"
        Command="{Binding InspectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
        Click="Inspect_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- 对勾图标 -->
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73E;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="一键点检"/>
                    </StackPanel>
                </Button>



            </WrapPanel>
        </Grid>
    </Border>
</UserControl>
