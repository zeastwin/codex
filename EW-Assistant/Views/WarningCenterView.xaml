<UserControl x:Class="EW_Assistant.Views.WarningCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
             mc:Ignorable="d"
             FontFamily="Segoe UI, Microsoft YaHei UI, Microsoft YaHei"
             FontSize="14">
    <UserControl.Resources>
        <SolidColorBrush x:Key="CriticalBrush" Color="#F87171"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FBBF24"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#60A5FA"/>

        <!-- 选中项淡蓝底色 -->
        <SolidColorBrush x:Key="SelectedItemBackgroundBrush" Color="#EEF3FF"/>
        <!-- 卡片阴影：上下区域统一风格，接缝更柔和 -->
        <DropShadowEffect x:Key="CardShadowEffect"
                          Color="#1A000000"
                          BlurRadius="12"
                          ShadowDepth="0"
                          Opacity="0.24"/>

        <CollectionViewSource x:Key="WarningsByLevel" Source="{Binding Warnings}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LevelDisplay"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <!-- 圆角按钮样式 -->
        <Style x:Key="RoundPrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="Bd" Property="BorderBrush"  Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundOutlineButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="86"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#EFF6FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterToggleButton" TargetType="ToggleButton">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="92"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#EFF6FF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Background="#F5F7FB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- 标题 + 操作卡片 -->
        <Border Grid.Row="0" Margin="8,8,8,10" Padding="12" Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#14000000" BlurRadius="12" ShadowDepth="1" Opacity="0.25"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="预警中心" FontSize="22" FontWeight="SemiBold" Foreground="#0B1220"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                        <TextBlock FontSize="13" Foreground="Gray"
                                   Text="{Binding Warnings.Count, StringFormat=已显示 {0} 条预警（最近 24 小时）}"/>
                    </StackPanel>
                    <!-- 概览：严重/警告/提示 -->
                    <ItemsControl Margin="0,4,0,0"
                                  ItemsSource="{Binding Source={StaticResource WarningsByLevel}, Path=View.Groups}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6,2" Margin="0,0,8,0" CornerRadius="8" Background="#EEF2F7">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" VerticalAlignment="Center" Margin="0,0,6,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#CBD5E1"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Name}" Value="严重">
                                                            <Setter Property="Fill" Value="{StaticResource CriticalBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Name}" Value="警告">
                                                            <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Name}" Value="提示">
                                                            <Setter Property="Fill" Value="{StaticResource InfoBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#0B1220" FontSize="13"/>
                                        <TextBlock Text="{Binding ItemCount, StringFormat= 共 {0} 条}" Margin="4,0,0,0" Foreground="#6B7280" FontSize="13"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <Border Grid.Column="1" Margin="12,0,24,0" Padding="10,6" Background="#F8FAFC" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ToggleButton x:Name="BtnFilterPending" Content="待处理" Tag="Pending" Style="{StaticResource FilterToggleButton}"
                                      IsChecked="True" Margin="0,0,6,0" Click="FilterButton_Click"/>
                        <ToggleButton x:Name="BtnFilterProcessed" Content="已处理" Tag="Processed" Style="{StaticResource FilterToggleButton}"
                                      Margin="0,0,6,0" Click="FilterButton_Click"/>
                        <ToggleButton x:Name="BtnFilterResolved" Content="已恢复" Tag="Resolved" Style="{StaticResource FilterToggleButton}"
                                      Click="FilterButton_Click"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0">
                    <Button Content="标记已处理" Style="{StaticResource RoundPrimaryButton}" Padding="18,10" FontSize="14" MinWidth="110" Click="BtnProcessed_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 预警列表 -->
        <Border Grid.Row="1"
                Margin="8,0,8,8"
                Background="White"
                CornerRadius="12"
                Padding="4"
                SnapsToDevicePixels="True"
                Effect="{StaticResource CardShadowEffect}">
            <ListBox x:Name="WarningList"
                     ItemsSource="{Binding Source={StaticResource WarningsByLevel}}"
                     SelectedItem="{Binding SelectedWarning}"
                     SelectionChanged="WarningList_SelectionChanged"
                     BorderThickness="0"
                     Background="Transparent"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                     VirtualizingPanel.VirtualizationMode="Recycling">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- 这里只保留描边，底色交给 DataTemplate 里的 Card 处理 -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="#3B82F6"/>
                                            <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="Transparent"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!-- 卡片本体：选中底色会作用在这里 -->
                        <Border x:Name="Card"
                                Margin="0,0,0,0"
                                Padding="10"
                                CornerRadius="8"
                                Background="White"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 标题行：等级 + 标题 -->
                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            VerticalAlignment="Center">
                                    <Border Padding="8,2" CornerRadius="8" Margin="0,0,8,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E5E7EB"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding LevelDisplay}" Value="严重">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LevelDisplay}" Value="警告">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LevelDisplay}" Value="提示">
                                                        <Setter Property="Background" Value="#DBEAFE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding LevelDisplay}"
                                                   FontWeight="Bold"
                                                   FontSize="13"
                                                   Foreground="#0B1220"/>
                                    </Border>
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#0B1220"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Type 标签 -->
                                <Border Grid.Row="0"
                                        Grid.Column="1"
                                        Padding="8,2"
                                        Margin="8,0,0,0"
                                        CornerRadius="10"
                                        VerticalAlignment="Center"
                                        Background="#F0F2FF">
                                    <TextBlock Text="{Binding TypeDisplay}"
                                               FontSize="13"
                                               Foreground="#0B1220"/>
                                </Border>

                                <!-- Summary 行 -->
                                <TextBlock Grid.Row="1"
                                           Grid.ColumnSpan="2"
                                           Margin="0,2,0,0"
                                           Text="{Binding Summary}"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="14"
                                           Foreground="#4B5563"/>

                                <!-- 底部：时间 + 指标 + 状态 -->
                                <StackPanel Grid.Row="2"
                                            Grid.ColumnSpan="2"
                                            Margin="0,6,0,0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="时间："
                                               FontSize="14"
                                               Foreground="Gray"/>
                                    <TextBlock Text="{Binding TimeRange}"
                                               FontSize="14"
                                               Margin="0,0,16,0"/>

                                    <TextBlock Text="指标："
                                               FontSize="14"
                                               Foreground="Gray"/>
                                    <TextBlock Text="{Binding MetricText}"
                                               FontSize="14"
                                               Margin="0,0,16,0"/>

                                    <TextBlock Text="状态："
                                               FontSize="14"
                                               Foreground="Gray"/>
                                    <TextBlock Text="{Binding Status}"
                                               FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- 选中态：让整张卡片淡蓝底色 + 蓝色边 -->
                        <DataTemplate.Triggers>
                            <DataTrigger Value="True"
                                         Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}">
                                <Setter TargetName="Card" Property="Background" Value="{StaticResource SelectedItemBackgroundBrush}"/>
                                <Setter TargetName="Card" Property="BorderBrush" Value="#3B82F6"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        CornerRadius="10"
                                        Padding="10"
                                        Margin="0,8,0,4"
                                        SnapsToDevicePixels="True">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="12" Height="12">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#CBD5E1"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Name}" Value="严重">
                                                            <Setter Property="Fill" Value="{StaticResource CriticalBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Name}" Value="警告">
                                                            <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Name}" Value="提示">
                                                            <Setter Property="Fill" Value="{StaticResource InfoBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Margin="8,0,6,0"
                                                   Foreground="#0B1220"/>
                                        <TextBlock Text="{Binding ItemCount, StringFormat=共 {0} 条}"
                                                   FontSize="13"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </ListBox.GroupStyle>
            </ListBox>
        </Border>

        <!-- AI 预留卡片（与上方一致的阴影，接缝更自然） -->
        <Border Grid.Row="2"
                Margin="8,0,8,8"
                Padding="12"
                CornerRadius="8"
                Background="White"
                SnapsToDevicePixels="True"
                MinHeight="200"
                MaxHeight="500"
                Effect="{StaticResource CardShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="AI 分析"
                           FontWeight="SemiBold"
                           FontSize="15"
                           Margin="0,0,0,6"/>
                <md:MarkdownScrollViewer x:Name="AiMarkdownViewer"
                                         Grid.Row="1"
                                         Padding="0,4,0,0"
                                         VerticalScrollBarVisibility="Auto"
                                         Markdown="{Binding AiAnalysisText}"
                                         FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
