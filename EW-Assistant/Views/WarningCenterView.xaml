<UserControl x:Class="EW_Assistant.Views.WarningCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Resources>
        <SolidColorBrush x:Key="CriticalBrush" Color="#F87171"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FBBF24"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#60A5FA"/>
        <CollectionViewSource x:Key="WarningsByLevel" Source="{Binding Warnings}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Level"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid Background="#F5F7FB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <Grid Grid.Row="0" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="预警中心" FontSize="24" FontWeight="SemiBold" Foreground="#0B1220"/>
                <TextBlock Text="显示当前机台最近 24 小时的预警概况，即使 AI 未连接也能使用。"
                           FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                <TextBlock Margin="0,8,0,0"
                           FontSize="12"
                           Foreground="Gray"
                           Text="{Binding Warnings.Count, StringFormat=已显示 {0} 条预警（最近 24 小时）}"/>
            </StackPanel>
            <TextBlock Grid.Column="1"
                       VerticalAlignment="Bottom"
                       FontSize="12"
                       Foreground="#94A3B8"
                       Text="{Binding LastUpdatedText}"
                       Margin="12,0,0,2"/>
        </Grid>

        <!-- 预警列表 -->
        <ScrollViewer Grid.Row="1"
                      Margin="8"
                      VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="WarningList"
                     ItemsSource="{Binding Source={StaticResource WarningsByLevel}}"
                     SelectedItem="{Binding SelectedWarning}"
                     BorderThickness="0"
                     Background="Transparent">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,4"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#EEF3FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,8"
                                Padding="12"
                                CornerRadius="8"
                                Background="White"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 左侧色条 -->
                                <Border Grid.RowSpan="3"
                                        Background="#E5E7EB"
                                        CornerRadius="4"
                                        Margin="0,0,12,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E5E7EB"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Level}" Value="Critical">
                                                    <Setter Property="Background" Value="{StaticResource CriticalBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                    <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="Info">
                                                    <Setter Property="Background" Value="{StaticResource InfoBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!-- 标题行：等级 + 标题 -->
                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            VerticalAlignment="Center">
                                    <Border Padding="8,2" CornerRadius="8" Margin="0,0,8,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E5E7EB"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Level}" Value="Critical">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}" Value="Info">
                                                        <Setter Property="Background" Value="#DBEAFE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Level}"
                                               FontWeight="Bold"
                                               FontSize="12"
                                               Foreground="#0B1220"/>
                                    </Border>
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>

                                <!-- Type 标签 -->
                                <Border Grid.Row="0"
                                        Grid.Column="2"
                                        Padding="8,2"
                                        Margin="8,0,0,0"
                                        CornerRadius="10"
                                        VerticalAlignment="Center"
                                        Background="#F0F2FF">
                                    <TextBlock Text="{Binding Type}"
                                               FontSize="12"/>
                                </Border>

                                <!-- Summary 行 -->
                                <TextBlock Grid.Row="1"
                                           Grid.ColumnSpan="2"
                                           Margin="0,4,0,0"
                                           Text="{Binding Summary}"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>

                                <!-- 底部：时间 + 指标 + 状态 -->
                                <StackPanel Grid.Row="2"
                                            Grid.ColumnSpan="2"
                                            Margin="0,8,0,0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="时间："
                                               FontSize="12"
                                               Foreground="Gray"/>
                                    <TextBlock Text="{Binding TimeRange}"
                                               FontSize="12"
                                               Margin="0,0,16,0"/>

                                    <TextBlock Text="指标："
                                               FontSize="12"
                                               Foreground="Gray"/>
                                    <TextBlock Text="{Binding MetricText}"
                                               FontSize="12"
                                               Margin="0,0,16,0"/>

                                    <TextBlock Text="状态："
                                               FontSize="12"
                                               Foreground="Gray"/>
                                    <TextBlock Text="{Binding Status}"
                                               FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        CornerRadius="10"
                                        Padding="10"
                                        Margin="0,8,0,4"
                                        SnapsToDevicePixels="True">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="12" Height="12">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#CBD5E1"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Name}" Value="Critical">
                                                            <Setter Property="Fill" Value="{StaticResource CriticalBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Name}" Value="Warning">
                                                            <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Name}" Value="Info">
                                                            <Setter Property="Fill" Value="{StaticResource InfoBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   Margin="8,0,6,0"
                                                   Foreground="#0B1220"/>
                                        <TextBlock Text="{Binding ItemCount, StringFormat=共 {0} 条}"
                                                   FontSize="12"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </ListBox.GroupStyle>
            </ListBox>
        </ScrollViewer>

        <!-- AI 预留卡片 -->
        <Border Grid.Row="2"
                Margin="8,0,8,8"
                Padding="12"
                CornerRadius="8"
                Background="White"
                SnapsToDevicePixels="True">
            <StackPanel>
                <TextBlock Text="AI 分析"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBlock Text="{Binding AiAnalysisText}"
                           FontSize="12"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
