<UserControl x:Class="EW_Assistant.Views.ConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="420" d:DesignWidth="840">

    <!-- 圆角按钮样式 -->
    <UserControl.Resources>
        <Style x:Key="RoundPrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="72"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="Bd" Property="BorderBrush"  Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundOutlineButton" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#EFF6FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="WhiteSmoke">
        <Border Margin="16" Padding="16" Background="White" CornerRadius="16">
            <Border.Effect>
                <DropShadowEffect Color="#1A000000" BlurRadius="18" ShadowDepth="2" Opacity="0.35"/>
            </Border.Effect>

            <Grid HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 标题+按钮 -->
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="1"/>
                    <!-- 分隔线 -->
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 表单 -->
                </Grid.RowDefinitions>

                <!-- 顶部：标题 + 操作按钮 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="程序设置"
                               VerticalAlignment="Center"
                               FontSize="16" FontWeight="SemiBold" Foreground="#0B1220"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal"
                                HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="测试"
                                Margin="0,0,8,0"
                                Style="{StaticResource RoundOutlineButton}"
                                Click="BtnTest_Click"/>
                        <Button Content="重新读取"
                                Margin="0,0,8,0"
                                Style="{StaticResource RoundOutlineButton}"
                                Click="BtnReload_Click"/>
                        <Button Content="保存"
                                Style="{StaticResource RoundPrimaryButton}"
                                Click="BtnSave_Click"/>
                    </StackPanel>
                </Grid>

                <!-- 分隔线 -->
                <Border Grid.Row="2" Background="#EEF2F7"/>

                <!-- 表单 -->
                <Grid Grid.Row="4" MaxWidth="980" HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- CsvRootPath -->
                        <RowDefinition Height="12"/>

                        <RowDefinition Height="Auto"/>
                        <!-- AlarmLogPath -->
                        <RowDefinition Height="12"/>

                        <RowDefinition Height="Auto"/>
                        <!-- AutoURL -->
                        <RowDefinition Height="8"/>

                        <RowDefinition Height="Auto"/>
                        <!-- AutoKey -->
                        <RowDefinition Height="12"/>

                        <RowDefinition Height="Auto"/>
                        <!-- ChatURL -->
                        <RowDefinition Height="8"/>

                        <RowDefinition Height="Auto"/>
                        <!-- ChatKey -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 产能 CSV 路径 -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="产能 CSV 路径：" VerticalAlignment="Center" Foreground="#374151"/>
                    <TextBox   Grid.Row="0" Grid.Column="1"
                               Height="30" FontSize="13" Padding="8,4"
                               Text="{Binding CsvRootPath, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- 报警 CSV 路径 -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="报警 CSV 路径：" VerticalAlignment="Center" Foreground="#374151"/>
                    <TextBox   Grid.Row="2" Grid.Column="1"
                               Height="30" FontSize="13" Padding="8,4"
                               Text="{Binding AlarmLogPath, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- AutoURL -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Auto API URL：" VerticalAlignment="Center" Foreground="#374151"/>
                    <TextBox   Grid.Row="4" Grid.Column="1"
                               Height="30" FontSize="13" Padding="8,4"
                               Text="{Binding AutoURL, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- AutoKey -->
                    <TextBlock Grid.Row="6" Grid.Column="0"
                               Text="Auto API Key：" VerticalAlignment="Center" Foreground="#374151"/>
                    <TextBox   Grid.Row="6" Grid.Column="1"
                               Height="30" FontSize="13" Padding="8,4"
                               Text="{Binding AutoKey, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- ChatURL -->
                    <TextBlock Grid.Row="8" Grid.Column="0"
                               Text="Chat API URL：" VerticalAlignment="Center" Foreground="#374151"/>
                    <TextBox   Grid.Row="8" Grid.Column="1"
                               Height="30" FontSize="13" Padding="8,4"
                               Text="{Binding ChatURL, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- ChatKey -->
                    <TextBlock Grid.Row="10" Grid.Column="0"
                               Text="Chat API Key：" VerticalAlignment="Center" Foreground="#374151"/>
                    <TextBox   Grid.Row="10" Grid.Column="1"
                               Height="30" FontSize="13" Padding="8,4"
                               Text="{Binding ChatKey, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
