<UserControl x:Class="EW_Assistant.Views.PerformanceMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             Background="#F3F4F6"
             FontFamily="Microsoft YaHei UI, Microsoft YaHei"
             FontSize="13">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="SeverityTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0F766E"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Severity}" Value="Critical">
                    <Setter Property="Foreground" Value="#B91C1C"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Severity}" Value="Warning">
                    <Setter Property="Foreground" Value="#D97706"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Severity}" Value="Info">
                    <Setter Property="Foreground" Value="#0F766E"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StabilityTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#16A34A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding CpuTrend.StabilityLevel}" Value="Fluctuating">
                    <Setter Property="Foreground" Value="#D97706"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="10"
                Padding="12"
                Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="CPU Usage"
                           FontWeight="SemiBold"
                           Foreground="#374151"/>
                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar Height="14"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding TotalCpuUsage, Mode=OneWay}"/>
                    <TextBlock Grid.Column="1"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="#111827"
                               Text="{Binding TotalCpuUsage, StringFormat={}{0:F1}%}"/>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Top Processes"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"
                                   Margin="0,0,0,8"/>
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding TopProcesses}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Process"
                                                    Binding="{Binding Name}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="CPU %"
                                                    Binding="{Binding CpuUsage, StringFormat={}{0:F1}}"
                                                    Width="90"/>
                                <DataGridTextColumn Header="Memory (MB)"
                                                    Binding="{Binding MemoryMb}"
                                                    Width="120"/>
                                <DataGridTextColumn Header="Uptime"
                                                    Binding="{Binding Uptime, StringFormat={}{0:dd\\.hh\\:mm\\:ss}}"
                                                    Width="140"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="12"
                        Margin="0,12,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" LastChildFill="False">
                            <TextBlock Text="AI 异常分析"
                                       FontWeight="SemiBold"
                                       Foreground="#374151"/>
                            <TextBlock DockPanel.Dock="Right"
                                       Text="分析中..."
                                       Foreground="#2563EB"
                                       Visibility="{Binding IsAiAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </DockPanel>

                        <Border Grid.Row="1"
                                Background="#F9FAFB"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,8,0,10">
                            <Grid DataContext="{Binding LatestAiRecord}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="最近一次"
                                           Foreground="#6B7280"/>
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Margin="8,0,0,0"
                                           Foreground="#6B7280"
                                           Text="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}, TargetNullValue=--}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2"
                                           Text="{Binding SeverityLabel, TargetNullValue=提示}"
                                           Style="{StaticResource SeverityTextStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                           Margin="0,8,0,0"
                                           Foreground="#111827"
                                           TextWrapping="Wrap"
                                           Text="{Binding Content, TargetNullValue=暂无 AI 分析结果}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                           Margin="0,8,0,0"
                                           Foreground="#9CA3AF"
                                           FontSize="11"
                                           Text="仅供人工决策参考，不触发设备控制。"/>
                            </Grid>
                        </Border>

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="历史记录"
                                       FontWeight="SemiBold"
                                       Foreground="#374151"
                                       Margin="0,0,0,6"/>
                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding AiHistory}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      RowHeaderWidth="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="时间"
                                                        Binding="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                                                        Width="80"/>
                                    <DataGridTemplateColumn Header="级别" Width="90">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Severity}"
                                                           Style="{StaticResource SeverityTextStyle}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="摘要"
                                                        Binding="{Binding Summary}"
                                                        Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="1" Margin="12,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="内存使用"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"/>
                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ProgressBar Height="12"
                                         Minimum="0"
                                         Maximum="100"
                                         Value="{Binding CurrentMemory.UsagePercent, Mode=OneWay}"/>
                            <TextBlock Grid.Column="1"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="#111827"
                                       Text="{Binding CurrentMemory.UsagePercent, StringFormat={}{0:F1}%}"/>
                        </Grid>
                        <StackPanel Grid.Row="2" Margin="0,8,0,0">
                            <TextBlock Foreground="#4B5563"
                                       Text="{Binding CurrentMemory.TotalMemoryMb, StringFormat=总内存 {0} MB}"/>
                            <TextBlock Foreground="#4B5563"
                                       Text="{Binding CurrentMemory.UsedMemoryMb, StringFormat=已使用 {0} MB}"/>
                            <TextBlock Foreground="#4B5563"
                                       Text="{Binding CurrentMemory.AvailableMemoryMb, StringFormat=可用 {0} MB}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="12"
                        Margin="0,12,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="磁盘容量"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"
                                   Margin="0,0,0,8"/>
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding DiskSnapshots}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="盘符"
                                                    Binding="{Binding DriveLetter}"
                                                    Width="60"/>
                                <DataGridTextColumn Header="总量(GB)"
                                                    Binding="{Binding TotalGb}"
                                                    Width="80"/>
                                <DataGridTextColumn Header="剩余(GB)"
                                                    Binding="{Binding FreeGb}"
                                                    Width="80"/>
                                <DataGridTextColumn Header="使用率"
                                                    Binding="{Binding UsagePercent, StringFormat={}{0:F1}%}"
                                                    Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border Grid.Row="2"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="12"
                        Margin="0,12,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="CPU 趋势"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"/>
                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Foreground="#4B5563" Text="1 分钟均值："/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Foreground="#111827"
                                       Text="{Binding CpuTrend.Avg1Min, StringFormat={}{0:F1}%}"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Foreground="#4B5563" Text="5 分钟均值："/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Foreground="#111827"
                                       Text="{Binding CpuTrend.Avg5Min, StringFormat={}{0:F1}%}"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Foreground="#4B5563" Text="15 分钟均值："/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Foreground="#111827"
                                       Text="{Binding CpuTrend.Avg15Min, StringFormat={}{0:F1}%}"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Foreground="#4B5563" Text="最大值："/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Foreground="#111827"
                                       Text="{Binding CpuTrend.Max, StringFormat={}{0:F1}%}"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Foreground="#4B5563" Text="最小值："/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Foreground="#111827"
                                       Text="{Binding CpuTrend.Min, StringFormat={}{0:F1}%}"/>
                            <TextBlock Grid.Row="5" Grid.Column="0" Foreground="#4B5563" Text="波动幅度："/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Foreground="#111827"
                                       Text="{Binding CpuTrend.Fluctuation, StringFormat={}{0:F1}%}"/>
                            <TextBlock Grid.Row="6" Grid.Column="0" Foreground="#4B5563" Text="稳定性："/>
                            <TextBlock Grid.Row="6" Grid.Column="1"
                                       Text="{Binding CpuTrend.StabilityLevel}"
                                       Style="{StaticResource StabilityTextStyle}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
